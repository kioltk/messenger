<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="PickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/picker_globalWindowBackground</item>
    </style>

    <style name="PickerTheme.FilePicker" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/pickerActionBarStyle</item>
    </style>

    <style name="pickerActionBarStyle">
        <item name="android:background">@color/picker_main_color</item>
    </style>

    <style name="toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">#fff</item><!-- actionbar buttons text color -->
        <item name="android:textColorPrimary">#fff</item><!-- actionbar text color -->
        <item name="android:textColorSecondary">#fff</item><!-- actionbar buttons color -->
        <!--item name="android:background">@color/color_primary</item--><!-- it have to be defined inside Toolbar tag -->
    </style>

    <style name="pickerActionBarStyleFilePicker" parent="@style/pickerActionBarStyle">
    </style>

    <style name="pickerActionBarStylePicturePicker" parent="@style/pickerActionBarStyle">
        <item name="android:background">@color/picker_main_color_picturepicker</item>
    </style>

    <style name="PickerTheme.MapPicker" parent="PickerTheme">
        <item name="android:actionBarStyle">@style/pickerActionBarStyle</item>
    </style>
</resources>
