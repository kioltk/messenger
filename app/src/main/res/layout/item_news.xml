<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/d">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        style="@style/CardView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/user_placeholder"
                android:layout_width="70px"
                android:layout_height="70px"
                android:id="@+id/user_photo" 
                android:layout_marginRight="10dp"/>
            <TextView
                android:text="Jesus Allahov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/user_photo"
                android:layout_toEndOf="@+id/user_photo"
                android:id="@+id/user_name"
                android:textColor="#ff343434"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="20:00"
                android:id="@+id/news_date"
                android:layout_below="@+id/user_name"
                android:layout_toRightOf="@+id/user_photo"

                />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/news_menu"
                    android:background="@drawable/ic_drawer"
                    android:layout_above="@+id/news_date"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Есть у меня талант долго думать написать ли, в итоге пишу, а человек минуту назад уже выключил телефон.
Хотя стоп...
Этот талант не только на сообщения распространяется.."
                android:textSize="14dp"
                android:textColor="#ff343434"
                android:id="@+id/news_body"
                android:layout_below="@+id/user_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="8dp" />

            <View
                android:id="@+id/card_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/news_comments"
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@android:drawable/ic_input_add"/>

                <TextView
                    android:id="@+id/news_comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="500"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/news_comments"
                    android:layout_toEndOf="@+id/news_comments" />

                <ImageButton
                    android:id="@+id/news_repost"
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@android:drawable/presence_video_online"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/news_reposts_count"
                    android:layout_toStartOf="@+id/news_reposts_count" />

                <TextView
                    android:id="@+id/news_reposts_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="500"
                    android:layout_marginRight="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/news_like"
                    android:layout_toStartOf="@+id/news_like" />

                <ImageButton
                    android:id="@+id/news_like"
                    android:layout_margin="5dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/news_likes_count"
                    android:layout_toStartOf="@+id/news_likes_count"
                    android:background="@android:drawable/star_on" />

                <TextView
                    android:id="@+id/news_likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="500"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="false"
                    android:layout_marginRight="5dp" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>