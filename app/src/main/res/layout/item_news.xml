<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/d">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/user_photo"
                    android:src="@drawable/user_placeholder"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="10dp"/>
                <LinearLayout
                    android:layout_toRightOf="@+id/user_photo"
                    android:layout_toLeftOf="@+id/news_menu"
                    android:paddingLeft="2dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/user_name"
                        android:text="Anna Lebedeva"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/user_photo"
                        android:textColor="#ff343434"
                        />

                    <TextView
                        android:id="@+id/news_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="yesterday at 20:00"
                        android:layout_below="@+id/user_name"
                        android:layout_toRightOf="@+id/user_photo"

                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:padding="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/news_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/menu"
                        />
                </RelativeLayout>



            </RelativeLayout>

            <TextView
                android:id="@+id/news_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Есть у меня талант долго думать написать ли, в итоге пишу, а человек минуту назад уже выключил телефон."
                android:textSize="14sp"
                android:textColor="#ff343434"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <View
                android:id="@+id/card_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/navigation_divider"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/news_comments"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="8dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/comment"/>

                    <TextView
                        android:id="@+id/news_comments_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="18"
                        />
                </LinearLayout>
                <LinearLayout
                    android:padding="8dp"
                    android:layout_toLeftOf="@+id/news_like"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/news_repost"
                        android:layout_margin="8dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/share"/>

                    <TextView
                        android:id="@+id/news_reposts_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="3"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/news_like"
                    android:padding="8dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="8dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/news_likes_count"
                        android:layout_toStartOf="@+id/news_likes_count"
                        android:src="@drawable/like" />

                    <TextView
                        android:id="@+id/news_likes_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="132"
                        android:textColor="#619de2"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp" />
                </LinearLayout>



            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>