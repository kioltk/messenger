<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/d">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="12dp"
        style="@style/CardView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_photo"
                android:src="@drawable/user_placeholder"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/user_name"
                android:text="Anna Lebedeva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/user_photo"
                android:textColor="#ff343434"
                android:layout_marginTop="10dp"
                android:layout_marginRight="170dp"
                />

            <TextView
                android:id="@+id/news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="yesterday at 20:00"
                android:layout_below="@+id/user_name"
                android:layout_toRightOf="@+id/user_photo"

                />

                <ImageView
                    android:id="@+id/news_menu"
                    android:layout_width="7dp"
                    android:layout_height="24dp"
                    android:background="@drawable/menu"
                    android:layout_toRightOf="@+id/user_name"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    />

                <TextView
                    android:id="@+id/news_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Есть у меня талант долго думать написать ли, в итоге пишу, а человек минуту назад уже выключил телефон."
                    android:textSize="14dp"
                    android:textColor="#ff343434"
                    android:layout_below="@+id/user_photo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="12dp" />

            </RelativeLayout>



            <View
                android:id="@+id/card_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/news_comments"
                    android:layout_margin="12dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/comment"/>

                <TextView
                    android:id="@+id/news_comments_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="18"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/news_comments"
                    android:layout_toEndOf="@+id/news_comments" />

                <ImageButton
                    android:id="@+id/news_repost"
                    android:layout_margin="12dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/share"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/news_reposts_count"
                    android:layout_toStartOf="@+id/news_reposts_count" />

                <TextView
                    android:id="@+id/news_reposts_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="3"
                    android:layout_marginRight="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/news_like"
                    android:layout_toStartOf="@+id/news_like" />

                <ImageButton
                    android:id="@+id/news_like"
                    android:layout_margin="12dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/news_likes_count"
                    android:layout_toStartOf="@+id/news_likes_count"
                    android:background="@drawable/like" />

                <TextView
                    android:id="@+id/news_likes_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="132"
                    android:textColor="#619de2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>